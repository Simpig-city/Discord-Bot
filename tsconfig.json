{
    "compilerOptions": {
      "watch": true,
      "module": "commonjs",
      "target": "ESNext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./build",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*", "./src/config.json"],
    "exclude": ["node_modules"]
  }